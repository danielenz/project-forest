        <div class="contact-map-box">
          <div class="tma-box">
            <div class="tel">
              <i class="fa-solid fa-phone"></i>
              <a href="tel:+48791300891"> +48 791 300 891</a>
            </div>
            <div class="mail">
              <i class="fa-solid fa-envelope"></i>
              <a href="mailto:forest@biuro.pl">forest@biuro.pl</a>
            </div>
            <div class="address">
              <i class="fa-solid fa-building-user"></i>
              <p>Adres siedziby:</p>
              <p>Restauracja McDonald's Jasnogórska 2, 31-358 Kraków</p>
            </div>
          </div>

          <div class="map-box">
            <iframe
              class="map"
              src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10239.593805595492!2d19.8928489!3d50.0881881!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2spl!4v1683468943396!5m2!1spl!2spl"
